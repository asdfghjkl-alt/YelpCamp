<% layout("layouts/boilerplate") %>
<h1>Deleting images</h1>
<form
    action="/campgrounds/<%= campground._id %>/delete-img?_method=DELETE"
    method="POST"
    class="validated-form"
>
    <div class="mb-3 row">
        <% campground.images.forEach((img, i) => { %>
        <div class="col-md-3 col-lg-2 col-sm-3">
            <img src="<%= img.thumbnail %>" class="img-thumbnail" />
            <br />
            <div class="form-check-inline">
                <input
                    type="checkbox"
                    id="image-<%= i %>"
                    name="deleteImages[]"
                    value="<%= img.filename %>"
                />
                <label for="img-<%= i %>">Delete?</label>
            </div>
        </div>
        <% }) %>
        <button class="btn btn-danger">Delete</button>
    </div>
</form>
