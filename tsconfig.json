{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true
    },
    "exclude": ["**/**_broken.ts", "node_modules"]
}
